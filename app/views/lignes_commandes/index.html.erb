
<% if user_signed_in? %>

<h1>Lignes commandes</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Nom</th>
        <th>quantit√©</th>
        <th>prix</th>
        <th>commentaires</th>
        <th>commande_id</th>
      </tr>
    </thead>

    <tbody>
    <% @lignes_commandes.each do |lignes_commande| %>
          <tr>
          
            <td> <%= link_to lignes_commande.nom, lignes_commande %> </td>
            <td> <%= lignes_commande.quantite %>    </td>
            <td> <%= lignes_commande.prix %>    </td>
            <td> <%= lignes_commande.commentaires %>    </td>
