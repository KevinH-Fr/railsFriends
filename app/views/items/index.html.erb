
<h1>Items</h1>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Commande</th>
        <th>Produit lié</th>
        <th>Prix</th>
        <th>Quantite</th>
        <th>Creation</th>
        <th>Modification</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @items.each do |item| %>
          <tr>

            <td> <%= item.id %>    </td>
            <td> <%= link_to item.nom, item %> </td>
            <td> <%= item.commande_id %>    </td>
            <td> <%= item.produitLie %>    </td> 
            <td> <%= item.prix %>    </td>
            <td> <%= item.quantite %>    </td>
            <td> <%= item.created_at %>    </td>
            <td> <%= item.updated_at %>    </td>

            <td> 
              <%= button_to "Voir", item, class:"btn btn-primary" %>
              <%= button_to 'Supprimer', item, method: :delete, :onclick => "return confirm('Sûr ?')", class:"btn btn-danger" %> 
            </td>
              
          </tr>

    <% end %>

    </tbody>
  </table>

  <%= link_to "New item", new_item_path %>

