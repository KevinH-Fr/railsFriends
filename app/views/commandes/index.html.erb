<% if user_signed_in? %>

<br/>

<h1 class="fa-regular fa-file-lines fa-2xl fw-bold fs-1"> - Commandes</h1>   

<hr/> 

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Index</th>
        <th>Nom</th>
        <th>Comment</th>
        <th>Client</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @commandes.each do |commande| %>
          <tr>

            <td> <%= commande.id %>    </td>
            <td> <%= link_to commande.nom, commande %> </td>
            <td> <%= commande.comment %>    </td>
            <td> <%= commande.client_id %>    </td>

              <td width="5%">
                    <%= link_to '', commande, class:"fa-solid fa-eye btn btn-primary" %> 
                </td>

                <td width="5%">
                  <%= button_to '', commande, class:"fa-solid fa-trash-can btn btn-danger", method: :delete, :onclick => "return confirm('SÃ»r ?')" %>
                </td> 
              
                <td width="5%">
                    <%= link_to "", edit_commande_path(commande), class:"fa-regular fa-pen-to-square btn btn-secondary" %> 
                </td> 
            
          </tr>

<% end %>
    </tbody>
  </table>

  <br>
  <%= link_to "Nouvelle commande", new_commande_path, class:"btn btn-primary" %>

<% else %>
  <h3> Vous n'avez pas les droits...</h3>
  
<% end %>