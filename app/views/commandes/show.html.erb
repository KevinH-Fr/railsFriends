
<h1> Détails commande n°<%= @commande.id  %> </h1>




<div class="classTest">

  <div class="jumbotron" style="width: 36rem;">
    <h1 class="display-4">
      <%= @commande.nom  %>
    </h1>

    <p class="lead">
    <%= @commande.comment %> | 
    <%= @commande.client_id %> |  
   
  </p>

    <hr class="my-4">
   
      <%= link_to "Modifier", edit_commande_path(@commande), class:"btn btn-secondary" %> 
      <%= button_to "Supprimer", @commande, data: { turbo_method: :destroy, turbo_confirm: "Etes-vous sûr ?"}, class: "btn btn-danger" %>
     

      <%= link_to "Retour", commandes_path, class:"btn btn-dark" %>

  </div>


    <h3> Client lié : </h3>

    <div class="card" style="width: 18rem;">
      <div class="card-header">

      
          <%=  @client = Client.find(@commande.client_id).nom %> 


      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= @commande.client_id %></li>
        <li class="list-group-item"> <%=  @client = Client.find(@commande.client_id).telephone %> </li>
        <li class="list-group-item"><%=  @client = Client.find(@commande.client_id).mail %> </li>
      </ul>


      </div>
      
    </div>

</div>


   
  <h3> Items liés : </h3>

    <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Quantité</th>
        <th>Prix unitaire</th>
        <th>Total</th>

      </tr>
    </thead>

    <tbody>

      <% @item.each do |item| %>
     
     <tr>
        <td>  <%= item.id %> </td>
        <td>  <%= link_to item.nom, item %> </td>
        

  <%#=  item.commande_id %>

    </tr> 

    <% end %>
    </tbody>
  </table>

    

